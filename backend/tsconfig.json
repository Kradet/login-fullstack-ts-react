{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
    	"allowSyntheticDefaultImports":true,
		"target": "es6",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
    	"resolveJsonModule":true
	},
	"include": ["src"]
}